---
// src/layouts/Layout.astro
export interface Props {
	title: string
	description?: string
}

const { title, description = "Elegante abayas en hijabs - Ontdek onze collectie van hoogwaardige islamitische kleding" } = Astro.props
---

<!DOCTYPE html>
<html lang="nl">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content={description} />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<title>{title}</title>

	<!-- Fonts - exact zoals Chador.nl -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body class="font-inter text-neutral-900 bg-neutral-50">
<!-- Top Bar - zoals Chador.nl -->
<div class="bg-neutral-900 text-white text-center py-2 text-xs">
	<p>Gratis verzending vanaf â‚¬99 | 30 dagen retourrecht</p>
</div>

<!-- Header - exact Chador.nl style -->
<header class="bg-white border-b border-neutral-200 sticky top-0 z-50">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex items-center justify-between h-20">
			<!-- Logo - minimalistisch zoals Chador -->
			<div class="flex-shrink-0">
				<a href="/" class="text-2xl font-light tracking-wider text-neutral-900 font-playfair">
					CHADOR
				</a>
			</div>

			<!-- Desktop Navigation - exact zoals Chador.nl -->
			<nav class="hidden md:flex space-x-12">
				<a href="/" class="text-neutral-700 hover:text-neutral-900 text-sm font-light tracking-wide uppercase transition-colors">
					Home
				</a>
				<a href="/shop" class="text-neutral-700 hover:text-neutral-900 text-sm font-light tracking-wide uppercase transition-colors">
					Shop
				</a>
				<a href="/new-arrivals" class="text-neutral-700 hover:text-neutral-900 text-sm font-light tracking-wide uppercase transition-colors">
					New Arrivals
				</a>
				<a href="/dresses" class="text-neutral-700 hover:text-neutral-900 text-sm font-light tracking-wide uppercase transition-colors">
					Dresses
				</a>
				<a href="/scarves" class="text-neutral-700 hover:text-neutral-900 text-sm font-light tracking-wide uppercase transition-colors">
					Scarves
				</a>
				<a href="/sale" class="text-red-600 hover:text-red-700 text-sm font-light tracking-wide uppercase transition-colors">
					Sale
				</a>
			</nav>

			<!-- Right side - Search & Cart zoals Chador -->
			<div class="flex items-center space-x-6">
				<!-- Search Icon -->
				<button class="text-neutral-700 hover:text-neutral-900 transition-colors">
					<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
					</svg>
				</button>

				<!-- Account -->
				<button class="text-neutral-700 hover:text-neutral-900 transition-colors">
					<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
					</svg>
				</button>

				<!-- Cart -->
				<button class="text-neutral-700 hover:text-neutral-900 relative transition-colors">
					<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
					</svg>
					<span class="absolute -top-2 -right-2 bg-neutral-900 text-white text-xs rounded-full h-4 w-4 flex items-center justify-center font-light">
                0
              </span>
				</button>

				<!-- Mobile menu button -->
				<button class="md:hidden text-neutral-700">
					<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>
		</div>
	</div>
</header>

<main class="min-h-screen">
	<slot />
</main>

<!-- Footer - Chador.nl style -->
<footer class="bg-neutral-100 border-t border-neutral-200">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
		<div class="grid grid-cols-1 md:grid-cols-4 gap-12">
			<!-- Brand -->
			<div class="md:col-span-1">
				<h3 class="text-2xl font-light tracking-wider text-neutral-900 font-playfair mb-4">CHADOR</h3>
				<p class="text-neutral-600 text-sm leading-relaxed">
					Your online store for modest fashion. Every outfit is carefully made to reflect timeless modest fashion.
				</p>
			</div>

			<!-- Shop -->
			<div>
				<h4 class="font-medium text-neutral-900 mb-6 text-sm tracking-wide uppercase">Shop</h4>
				<ul class="space-y-3 text-sm text-neutral-600">
					<li><a href="/new-arrivals" class="hover:text-neutral-900 transition-colors">New Arrivals</a></li>
					<li><a href="/dresses" class="hover:text-neutral-900 transition-colors">Dresses</a></li>
					<li><a href="/scarves" class="hover:text-neutral-900 transition-colors">Scarves</a></li>
					<li><a href="/sale" class="hover:text-neutral-900 transition-colors">Sale</a></li>
				</ul>
			</div>

			<!-- Customer Care -->
			<div>
				<h4 class="font-medium text-neutral-900 mb-6 text-sm tracking-wide uppercase">Customer Care</h4>
				<ul class="space-y-3 text-sm text-neutral-600">
					<li><a href="/contact" class="hover:text-neutral-900 transition-colors">Contact</a></li>
					<li><a href="/shipping" class="hover:text-neutral-900 transition-colors">Shipping</a></li>
					<li><a href="/returns" class="hover:text-neutral-900 transition-colors">Returns</a></li>
					<li><a href="/size-guide" class="hover:text-neutral-900 transition-colors">Size Guide</a></li>
				</ul>
			</div>

			<!-- Connect -->
			<div>
				<h4 class="font-medium text-neutral-900 mb-6 text-sm tracking-wide uppercase">Connect</h4>
				<div class="flex space-x-4 mb-6">
					<a href="#" class="text-neutral-600 hover:text-neutral-900 transition-colors">
						<span class="sr-only">Instagram</span>
						<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.864 3.708 13.713 3.708 12.416s.49-2.448 1.418-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.928.875 1.418 2.026 1.418 3.323s-.49 2.448-1.418 3.323c-.875.807-2.026 1.297-3.323 1.297z"/>
						</svg>
					</a>
					<a href="#" class="text-neutral-600 hover:text-neutral-900 transition-colors">
						<span class="sr-only">Facebook</span>
						<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
						</svg>
					</a>
				</div>
				<!-- Newsletter Signup -->
				<div>
					<p class="text-xs text-neutral-600 mb-3 uppercase tracking-wide">Join our mailinglist and receive 10% off</p>
					<div class="flex">
						<input
							type="email"
							placeholder="Email address"
							class="border border-neutral-300 px-3 py-2 text-xs flex-1 focus:outline-none focus:border-neutral-900 bg-white"
						/>
						<button class="bg-neutral-900 text-white px-4 py-2 text-xs uppercase tracking-wide hover:bg-neutral-800 transition-colors">
							Subscribe
						</button>
					</div>
				</div>
			</div>
		</div>

		<!-- Bottom -->
		<div class="border-t border-neutral-300 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
			<p class="text-xs text-neutral-500">&copy; 2025 CHADOR. All rights reserved.</p>
			<div class="flex space-x-6 mt-4 md:mt-0">
				<a href="/privacy" class="text-xs text-neutral-500 hover:text-neutral-900">Privacy Policy</a>
				<a href="/terms" class="text-xs text-neutral-500 hover:text-neutral-900">Terms of Service</a>
			</div>
		</div>
	</div>
</footer>

<style>
	.font-inter {
		font-family: 'Inter', sans-serif;
	}
	.font-playfair {
		font-family: 'Playfair Display', serif;
	}
</style>
</body>
</html>